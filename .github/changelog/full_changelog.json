{
	"categories": [
		{
			"title": "### 🚀 Features",
			"labels": ["feature", "enhancement"]
		},
		{
			"title": "### 🐛 Bugs",
			"labels": ["fix", "bug"]
		},
		{
			"title": "### 🔬 Tests",
			"labels": ["test"]
		},
		{
			"title": "### 📝 Documentation",
			"labels": ["documentation"]
		},
		{
			"title": "### 🤓 Refactor",
			"labels": ["refactor"]
		}
	],
	"template": "#{{CHANGELOG}}",
	"pr_template": "- #{{TITLE}} ([#{{NUMBER}}](#{{URL}}) — [#{{AUTHOR}}](https://github.com/#{{AUTHOR}}))",
	"base_branches": ["main"]
}
